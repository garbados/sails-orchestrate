{
  "name": "sails-orchestrate",
  "version": "0.0.2",
  "description": "orchestrate adapter for Sails / Waterline",
  "main": "adapter.js",
  "scripts": {
    "test": "npm run jshint && npm run jscoverage && npm run mocha",
    "debug": "NODE_DEBUG=true npm run mocha",
    "mocha": "./node_modules/.bin/mocha test/unit -R spec",
    "jshint": "./node_modules/.bin/jshint lib test",
    "jscoverage": "./node_modules/.bin/jscoverage lib lib-cov"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/gameclash/sails-orchestrate.git"
  },
  "keywords": [
    "orchestrate",
    "adapter",
    "sails",
    "waterline",
    "sails.js",
    "plugin"
  ],
  "author": "Game Clash Inc",
  "license": "MIT",
  "readmeFilename": "README.md",
  "dependencies": {
    "orchestrate": "^0.3.4"
  },
  "devDependencies": {
    "captains-log": "~0.11.0",
    "jscoverage": "^0.5.6",
    "jshint": "^2.5.5",
    "mocha": "*",
    "waterline-adapter-tests": "~0.10.0"
  },
  "waterlineAdapter": {
    "type": "orchestrate",
    "interfaces": [
      "semantic",
      "queryable"
    ],
    "waterlineVersion": "~0.10.0"
  }
}
